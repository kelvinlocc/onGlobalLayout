<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/pm_layout"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/pm_title"
                    style="@style/general_sign_title"
                    android:text="Project Manager (PM) / \nPM’s Representative"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/pm_sign"
                        style="@style/sign_box"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="120dp" />

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="160dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/pm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/contractor_layout"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/contractor_title"
                    style="@style/general_sign_title"
                    android:text="Contractor’s \nRepresentative "
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/contractor_sign"
                        style="@style/sign_box"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="120dp" />

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="160dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/contractor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/data_01"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/et_layout"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/et_title"
                    style="@style/general_sign_title"
                    android:text="ET Leader / \nET’s Representative"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/et_sign"
                        style="@style/sign_box"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="120dp" />

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="160dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/date_03"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/iec_layout"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/iec_title"
                    style="@style/general_sign_title"
                    android:text="IEC / \nIEC’s Representative"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/iec_sign"
                        style="@style/sign_box"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="120dp" />

                        <View
                            style="@style/line_horizontal"
                            android:layout_marginTop="160dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/iec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        style="@style/sign_name"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/date_04"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

