<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="common_button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/themeColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="common_button_match_horizontal" parent="Base.Widget.AppCompat.Button">
        <item name="theme">@style/common_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/themeColor</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="report_sub_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="report_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/shape_common</item>
        <item name="android:layout_marginLeft">@dimen/item_margin_horizontal</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="report_sub_title2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="report_edittext2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/shape_common</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="weather_sub_title">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="common_radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:button">@drawable/custom_radiobutton</item>
    </style>

    <style name="general_tab_name">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="general_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/shape_common</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="general_sign_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sign_box">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/shape_common</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="sign_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_common</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/themeColor</item>

    </style>
</resources>
